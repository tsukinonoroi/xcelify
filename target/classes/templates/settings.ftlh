        document.querySelector('.edit-button').classList.add('hidden'); // –°–∫—Ä—ã–≤–∞–µ–º –∫–Ω–æ–ø–∫—É "–ò–∑–º–µ–Ω–∏—Ç—å"
    }

    function cancelEdit() {
        document.getElementById('edit-form').classList.add('hidden'); // –°–∫—Ä—ã–≤–∞–µ–º —Ñ–æ—Ä–º—É
        document.querySelector('.edit-button').classList.remove('hidden'); // –ü–æ–∫–∞–∑—ã–≤–∞–µ–º –∫–Ω–æ–ø–∫—É "–ò–∑–º–µ–Ω–∏—Ç—å"
    }
</script>

</body>
</html>
