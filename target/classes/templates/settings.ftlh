    </div>
</div>

<script>
    // –ü–æ–ª—É—á–∞–µ–º –ø–∞—Ä–æ–ª—å –∏–∑ –º–æ–¥–µ–ª–∏
    const currentPassword = '${user.password}'; // –ò—Å–ø–æ–ª—å–∑—É–µ–º –∑–Ω–∞—á–µ–Ω–∏–µ –ø–∞—Ä–æ–ª—è —Ç–µ–∫—É—â–µ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –∏–∑ –º–æ–¥–µ–ª–∏

    function togglePassword() {
        const password = document.getElementById('display-password');
        const currentText = password.textContent;
        password.textContent = currentText === '‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢' ? currentPassword : '‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢';
        const eyeIcon = document.querySelector('.password-toggle');
        eyeIcon.textContent = currentText === '‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢' ? 'üîí' : 'üëÅÔ∏è'; // –ò–∑–º–µ–Ω–µ–Ω–∏–µ –∏–∫–æ–Ω–∫–∏
    }

    function togglePasswordVisibility() {
        const passwordField = document.getElementById('new-password');
        passwordField.type = passwordField.type === 'password' ? 'text' : 'password';
        const eyeIcon = document.querySelector('.password-toggle');
        eyeIcon.textContent = passwordField.type === 'password' ? 'üëÅÔ∏è' : 'üîí'; // –ò–∑–º–µ–Ω–µ–Ω–∏–µ –∏–∫–æ–Ω–∫–∏
    }

